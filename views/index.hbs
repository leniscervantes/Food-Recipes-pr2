<div class="container cards card mb-2 bg-transparent" style="max-width: 100%;">
    <div class="row justify-content-center recipe-cluster">

        {{#each data.recipes}}

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card mt-4" style="width: 80%;">
                <img src={{image}} class="card-img-top" alt="recipe">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="/recipe/{{id}}" class="btn btn-primary">Check this recipe!</a>
